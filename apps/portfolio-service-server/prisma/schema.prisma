datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Projects {
  id               String                         @id @default(cuid())
  createdAt        DateTime                       @default(now())
  updatedAt        DateTime                       @updatedAt
  name             String?
  url              String?
  startDate        DateTime?
  endDate          DateTime?
  technologiesUsed EnumProjectsTechnologiesUsed[]
  description      String?
}

model Skills {
  id               String                      @id @default(cuid())
  createdAt        DateTime                    @default(now())
  updatedAt        DateTime                    @updatedAt
  name             String?
  proficiencyLevel EnumSkillsProficiencyLevel?
}

model Contact {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  name          String?
  email         String?
  message       String?
  dateSubmitted DateTime?
}

model Testimonials {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  feedback  String?
  date      DateTime?
  name      String?
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}

enum EnumProjectsTechnologiesUsed {
  Option1
}

enum EnumSkillsProficiencyLevel {
  Option1
}
